<div class="page-header">
  <h1>
    Locations
  </h1>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th></th>
      </tr>
      <% @locations.each do |location| %>
          <tr>
            <td><%= location.Name %></td>
            <td><%= location.Address %></td>
            <td align="right">
                <a href="/locations/<%= location.id %>/edit" class="btn btn-sm btn-default">Edit</a>
                <a href="/delete_location/<%= location.id %>" class="btn btn-sm btn-default" rel="nofollow">Delete</a>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
<a href="/locations/new" class="btn btn-md btn-success">New Location</a>
