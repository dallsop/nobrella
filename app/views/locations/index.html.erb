<div class="page-header">
  <h2>
    Places
  </h2>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th></th>
      </tr>
      <% @locations.each do |location| %>
          <tr>
            <td><%= location.name %></td>
            <td><%= location.address %></td>
            <td align="right">
              <a href="/locations/<%= location.id %>/edit" class="btn btn-sm btn-primary">Edit</a>
              <a href="/delete_location/<%= location.id %>" class="btn btn-sm btn-primary" rel="nofollow">Delete</a>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
<a href="/locations/new" class="btn btn-md btn-success">Add Place</a>
<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <a href="/" class="btn btn-warning btn-lg">
        Nobrella
      </a>
    </div>
  </div>
</div>
